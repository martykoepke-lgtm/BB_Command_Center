# ============================================================
# BB Enabled Command — Production Environment Variables
# Copy to .env and fill in real values
# ============================================================

# ── Database ──
POSTGRES_DB=bb_command
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# ── Redis ──
REDIS_PASSWORD=CHANGE_ME_redis_password_here

# ── Auth ──
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_generate_a_64_char_secret

# ── Anthropic AI ──
ANTHROPIC_API_KEY=sk-ant-...

# ── App ──
CORS_ORIGINS=https://your-domain.com

# ── Frontend (Vercel) ──
# Set BACKEND_URL in Vercel dashboard environment variables
# BACKEND_URL=https://your-backend.railway.app

# ── Frontend port (Docker only) ──
FRONTEND_PORT=80
